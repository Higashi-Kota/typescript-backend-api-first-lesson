{
  "name": "beauty-salon-reservation-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:backend": "pnpm --filter './backend/**' run dev",
    "dev:frontend": "pnpm --filter './frontend/**' run dev",
    "build": "pnpm -r --workspace-concurrency=Infinity run build",
    "build:dev": "pnpm -r run build:dev",
    "build:test": "pnpm -r run build:test",
    "build:stg": "pnpm -r run build:stg",
    "build:prod": "pnpm -r run build:prod",
    "build:backend": "pnpm --filter './backend/**' run build",
    "build:backend:packages": "pnpm --filter './backend/packages/**' --workspace-concurrency=Infinity run build",
    "build:backend:server": "pnpm --filter '@beauty-salon-backend/server' run build",
    "start:backend:prod": "pnpm --filter '@beauty-salon-backend/server' run start",
    "build:frontend": "pnpm --filter './frontend/**' run build",
    "test": "pnpm -r run test",
    "test:backend": "pnpm --filter './backend/**' run test",
    "test:frontend": "pnpm --filter './frontend/**' run test",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "format:fix": "pnpm -r run format:fix",
    "format:check": "pnpm -r run format",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean",
    "clean:all": "pnpm -r run clean && rm -rf node_modules **/node_modules",
    "fresh": "pnpm clean:all && pnpm install",
    "prepare": "husky",
    "knip": "knip",
    "update:deps": "taze -r -w --install",
    "update:check": "taze -r",
    "generate:spec": "pnpm --filter '@beauty-salon/specs' run compile",
    "generate:api": "pnpm --filter '@beauty-salon-frontend/api-client' run generate",
    "generate:backend": "pnpm --filter '@beauty-salon/specs' run generate:backend",
    "generate": "pnpm run generate:spec && pnpm run generate:api && pnpm run generate:backend",
    "generate:watch": "pnpm --filter '@beauty-salon/specs' run watch",
    "db:generate": "pnpm --filter '@beauty-salon-backend/migration' run generate",
    "db:migrate": "pnpm --filter '@beauty-salon-backend/migration' run migrate",
    "db:seed": "pnpm --filter '@beauty-salon-backend/migration' run seed",
    "db:reset": "pnpm --filter '@beauty-salon-backend/migration' run reset"
  },
  "devDependencies": {
    "@beauty-salon-shared/config": "workspace:*",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.5",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "lint-staged": "^15.5.2",
    "openapi-typescript": "^7.8.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "taze": "^19.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "24.4.0",
    "yarn": "4.9.2",
    "npm": "11.4.2",
    "pnpm": "10.13.1"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "date-fns": "^4.1.0",
    "ts-pattern": "^5.7.1",
    "uuid": "^11.1.0",
    "yaml": "^2.3.4",
    "zod": "^4.0.5"
  }
}
