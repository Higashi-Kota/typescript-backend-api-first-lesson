# ================================
# Node Environment
# ================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/beauty_salon
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# For docker-compose
POSTGRES_DB=beauty_salon
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example_password
POSTGRES_PORT=5432

# ================================
# Authentication & Security
# ================================
# JWT Settings
JWT_SECRET=example-jwt-secret-key-minimum-32-characters-xxx
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=example-refresh-secret-key-minimum-32-chars-xxx
JWT_REFRESH_EXPIRES_IN=30d

# Session Settings
SESSION_SECRET=example-session-secret-minimum-32-characters-xxx
SESSION_COOKIE_NAME=beauty_salon_session
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax

# Password & Security
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=encryption-key-PLACEHOLDER-ONLY
CSRF_SECRET=csrf-secret-PLACEHOLDER-ONLY-xx

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRES_IN=3600
PASSWORD_RESET_URL=http://localhost:3001/reset-password

# Email Verification
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=86400
EMAIL_VERIFICATION_URL=http://localhost:3001/verify-email

# Two Factor Auth
TWO_FACTOR_ISSUER=Beauty Salon
TWO_FACTOR_WINDOW=2

# ================================
# CORS Configuration
# ================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:3003
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# ================================
# Email Configuration
# ================================
EMAIL_PROVIDER=mailhog
EMAIL_FROM_ADDRESS=noreply@beauty-salon.local
EMAIL_FROM_NAME=Beauty Salon
EMAIL_REPLY_TO=support@beauty-salon.local

# MailHog Settings (Development)
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025

# Mailgun Settings (Production)
# EMAIL_PROVIDER=mailgun
# MAILGUN_API_KEY=key-xxxxxxxxxxxxxxxxxx
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_REGION=US
# MAILGUN_TEST_MODE=false
# MAILGUN_WEBHOOK_SIGNING_KEY=xxxxxxxxxx

# ================================
# Storage Configuration
# ================================
STORAGE_PROVIDER=minio

# MinIO Settings (Development)
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=beauty-salon-dev
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin

# Cloudflare R2 Settings (Production)
# STORAGE_PROVIDER=r2
# R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com
# R2_BUCKET=beauty-salon-prod
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key

# Storage Common Settings
STORAGE_MAX_FILE_SIZE=524288000
STORAGE_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
STORAGE_UPLOAD_URL_EXPIRES_IN=3600
STORAGE_DOWNLOAD_URL_EXPIRES_IN=86400

# ================================
# External Service Ports (Docker)
# ================================
# These are used by docker-compose.yml
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ================================
# Optional External Services
# ================================

# CDN Configuration
# CDN_BASE_URL=https://cdn.example.com
# CDN_ENABLE=false