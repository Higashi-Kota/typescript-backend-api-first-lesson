{
  "extends": "@beauty-salon-shared/config/backend.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@beauty-salon-backend/domain": ["./packages/domain/src"],
      "@beauty-salon-backend/domain/*": ["./packages/domain/src/*"],
      "@beauty-salon-backend/infrastructure": ["./packages/infrastructure/src"],
      "@beauty-salon-backend/infrastructure/*": ["./packages/infrastructure/src/*"],
      "@beauty-salon-backend/api": ["./packages/api/src"],
      "@beauty-salon-backend/api/*": ["./packages/api/src/*"],
      "@beauty-salon-backend/config": ["./packages/config/src"],
      "@beauty-salon-backend/config/*": ["./packages/config/src/*"],
      "@beauty-salon-backend/database": ["./packages/database/src"],
      "@beauty-salon-backend/database/*": ["./packages/database/src/*"],
      "@beauty-salon-backend/generated": ["./packages/generated/src"],
      "@beauty-salon-backend/generated/*": ["./packages/generated/src/*"]
    }
  },
  "references": [
    { "path": "./packages/generated" },
    { "path": "./packages/config" },
    { "path": "./packages/infrastructure" },
    { "path": "./packages/api" },
    { "path": "./apps/server" }
  ]
}
