{
  "extends": "@beauty-salon-shared/config/backend.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@beauty-salon-backend/domain": ["./packages/domain/src"],
      "@beauty-salon-backend/domain/*": ["./packages/domain/src/*"],
      "@beauty-salon-backend/types": ["./packages/types/src"],
      "@beauty-salon-backend/types/*": ["./packages/types/src/*"],
      "@beauty-salon-backend/infrastructure": ["./packages/infrastructure/src"],
      "@beauty-salon-backend/infrastructure/*": ["./packages/infrastructure/src/*"],
      "@beauty-salon-backend/api": ["./packages/api/src"],
      "@beauty-salon-backend/api/*": ["./packages/api/src/*"],
      "@beauty-salon-backend/config": ["./packages/config/src"],
      "@beauty-salon-backend/config/*": ["./packages/config/src/*"],
      "@beauty-salon-backend/usecase": ["./packages/usecase/src"],
      "@beauty-salon-backend/usecase/*": ["./packages/usecase/src/*"],
      "@beauty-salon-backend/test-utils": ["./packages/test-utils/src"],
      "@beauty-salon-backend/test-utils/*": ["./packages/test-utils/src/*"]
    }
  },
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/config" },
    { "path": "./packages/domain" },
    { "path": "./packages/test-utils" },
    { "path": "./packages/usecase" },
    { "path": "./packages/infrastructure" },
    { "path": "./packages/api" },
    { "path": "./apps/server" },
    { "path": "./apps/migration" }
  ],
  "exclude": ["**/node_modules", "**/dist"]
}
