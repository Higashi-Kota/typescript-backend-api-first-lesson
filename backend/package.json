{
  "name": "@beauty-salon-backend/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "build:packages": "pnpm --filter './packages/**' run build",
    "build:server": "pnpm --filter '@beauty-salon-backend/server' run build",
    "start:prod": "pnpm --filter '@beauty-salon-backend/server' run start",
    "test": "pnpm -r run test",
    "format": "biome format --write .",
    "format:fix": "biome check . --fix --unsafe",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean"
  },
  "devDependencies": {
    "@beauty-salon-shared/config": "workspace:*"
  }
}
