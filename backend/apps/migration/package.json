{
  "name": "@beauty-salon-backend/migration",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "migrate": "tsx src/migrate.ts",
    "seed": "tsx src/seed.ts",
    "generate": "drizzle-kit generate",
    "reset": "tsx src/reset.ts",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:fix": "biome check . --fix --unsafe",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@beauty-salon-backend/config": "workspace:*",
    "@beauty-salon-backend/infrastructure": "workspace:*",
    "@beauty-salon-backend/types": "workspace:*",
    "drizzle-orm": "^0.44.2",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.3"
  }
}
