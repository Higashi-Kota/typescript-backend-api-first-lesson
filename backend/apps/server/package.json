{
  "name": "@beauty-salon-backend/server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:fix": "biome check . --fix --unsafe",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write"
  },
  "dependencies": {
    "@beauty-salon-backend/api": "workspace:*",
    "@beauty-salon-backend/config": "workspace:*",
    "@beauty-salon-backend/infrastructure": "workspace:*"
  },
  "devDependencies": {
    "@beauty-salon-shared/config": "workspace:*",
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
