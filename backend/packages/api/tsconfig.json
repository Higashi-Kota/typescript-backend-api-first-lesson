{
  "extends": "@beauty-salon-shared/config/tsconfig.lib.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["vitest/globals", "node"]
  },
  "references": [
    { "path": "../domain" },
    { "path": "../generated" },
    { "path": "../infrastructure" }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
