{
  "extends": "@beauty-salon-shared/config/tsconfig.lib.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "types": ["vitest/globals", "node"]
  },
  "references": [
    { "path": "../domain" },
    { "path": "../generated" },
    { "path": "../infrastructure" }
  ],
  "include": [
    "src/**/*",
    "../infrastructure/src/services/sentry.service.ts",
    "../infrastructure/src/services/metrics.service.ts",
    "../infrastructure/src/services/jwt.service.ts",
    "../infrastructure/src/services/error-context.service.ts",
    "../infrastructure/src/services/email-adapter.service.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
