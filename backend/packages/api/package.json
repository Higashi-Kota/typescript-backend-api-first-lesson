{
  "name": "@beauty-salon-backend/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "build:dev": "NODE_ENV=development rslib build && tsc --emitDeclarationOnly",
    "build:test": "NODE_ENV=test rslib build && tsc --emitDeclarationOnly",
    "build:stg": "NODE_ENV=staging rslib build && tsc --emitDeclarationOnly",
    "build:prod": "NODE_ENV=production rslib build && tsc --emitDeclarationOnly",
    "build:watch": "NODE_ENV=development rslib build --watch",
    "dev": "NODE_ENV=development rslib build --watch",
    "dev:tsc": "tsc --build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "format:fix": "biome check . --fix --unsafe",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write"
  },
  "dependencies": {
    "@beauty-salon-backend/config": "workspace:*",
    "@beauty-salon-backend/database": "workspace:*",
    "@beauty-salon-backend/domain": "workspace:*",
    "@beauty-salon-backend/generated": "workspace:*",
    "@beauty-salon-backend/infrastructure": "workspace:*",
    "@beauty-salon-backend/utility": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "express-csrf-protect": "^3.1.1",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "pino": "^9.12.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "ts-pattern": "^5.8.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@beauty-salon-shared/config": "workspace:*",
    "@biomejs/biome": "^2.2.4",
    "@rslib/core": "^0.14.0",
    "@testcontainers/postgresql": "^11.6.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "testcontainers": "^11.6.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
