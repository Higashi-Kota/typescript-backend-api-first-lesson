{
  "extends": "@beauty-salon-shared/config/tsconfig.lib.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "types": ["vitest/globals", "node"],
    "preserveConstEnums": true
  },
  "references": [{ "path": "../domain" }, { "path": "../config" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
