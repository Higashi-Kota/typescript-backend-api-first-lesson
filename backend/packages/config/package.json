{
  "name": "@beauty-salon-backend/config",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "build:dev": "NODE_ENV=development rslib build && tsc --emitDeclarationOnly",
    "build:test": "NODE_ENV=test rslib build && tsc --emitDeclarationOnly",
    "build:stg": "NODE_ENV=staging rslib build && tsc --emitDeclarationOnly",
    "build:prod": "NODE_ENV=production rslib build && tsc --emitDeclarationOnly",
    "build": "NODE_ENV=production rslib build && tsc --emitDeclarationOnly",
    "build:watch": "NODE_ENV=development rslib build --watch",
    "dev": "NODE_ENV=development rslib build --watch",
    "dev:tsc": "tsc --build --watch",
    "typecheck": "tsc --build --noEmit",
    "format": "biome format --write .",
    "format:fix": "biome check . --fix --unsafe",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "knip": "knip --include dependencies,optionalPeerDependencies,unlisted,binaries,unresolved",
    "package:check": "taze -r"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.8",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@beauty-salon-shared/config": "workspace:*",
    "@biomejs/biome": "^1.9.4",
    "@rslib/core": "^0.10.5",
    "@types/node": "^24.0.13",
    "knip": "^5.61.3",
    "taze": "^19.1.0",
    "typescript": "^5.8.3"
  }
}
