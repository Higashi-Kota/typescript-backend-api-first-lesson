# Test environment configuration
NODE_ENV=test

# Server configuration
PORT=3000

# Test database (will be overridden by Testcontainers)
DATABASE_URL=postgresql://test:test@localhost:5432/test
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5

# JWT configuration
JWT_SECRET=test-jwt-secret-for-integration-tests-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS configuration
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=error

# Encryption
ENCRYPTION_KEY=test-encryption-key-64-characters-for-testing-environment-123456

# Storage configuration for tests
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_BUCKET=test-bucket
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin

# Email configuration for tests
EMAIL_PROVIDER=development
FROM_EMAIL=test@beauty-salon.test
FROM_NAME=Test Beauty Salon