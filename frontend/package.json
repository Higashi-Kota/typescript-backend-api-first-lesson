{
  "name": "@beauty-salon-frontend/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r run clean",
    "storybook": "pnpm --filter @beauty-salon-frontend/ui run storybook",
    "generate": "pnpm --filter @beauty-salon-frontend/api-client run generate",
    "generate:clean": "pnpm --filter @beauty-salon-frontend/api-client run clean",
    "generate:full": "pnpm run generate:clean && pnpm run generate"
  },
  "devDependencies": {
    "@beauty-salon-shared/config": "workspace:*",
    "vite": "^7.1.7"
  }
}
