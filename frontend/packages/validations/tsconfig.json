{
  "extends": "@beauty-salon-shared/config/tsconfig.lib.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "lib": ["ESNEXT", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../message" }
  ]
}
