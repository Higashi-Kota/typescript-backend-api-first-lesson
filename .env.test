# ================================
# Node Environment
# ================================
NODE_ENV=test
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgres://test_user:test_password@localhost:5432/beauty_salon_test
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=15000
POSTGRES_DB=beauty_salon_test
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_PORT=5432
DB_HOST=localhost

# ================================
# Authentication & Security
# ================================
JWT_SECRET=test-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=test-refresh-secret-key-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# ================================
# Session
# ================================
SESSION_SECRET=test-session-secret-key-minimum-32-characters
SESSION_COOKIE_NAME=beauty_salon_session
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax

# ================================
# Security
# ================================
BCRYPT_ROUNDS=4
ENCRYPTION_KEY=test-32-character-encryption-ke
CSRF_SECRET=test-csrf-secret

# ================================
# Password Reset
# ================================
PASSWORD_RESET_TOKEN_EXPIRES_IN=3600
PASSWORD_RESET_URL=http://localhost:3001/reset-password

# ================================
# Email Verification
# ================================
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=86400
EMAIL_VERIFICATION_URL=http://localhost:3001/verify-email

# ================================
# Two Factor Auth
# ================================
TWO_FACTOR_ISSUER=Beauty Salon Test
TWO_FACTOR_WINDOW=2

# ================================
# CORS
# ================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:3003
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ================================
# Logging
# ================================
LOG_LEVEL=error
LOG_FORMAT=json
LOG_FILE_PATH=./test-logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# ================================
# Email Configuration
# ================================
EMAIL_PROVIDER=mailhog
EMAIL_FROM_ADDRESS=test@beauty-salon.test
EMAIL_FROM_NAME=Test Beauty Salon
EMAIL_REPLY_TO=test-reply@beauty-salon.test

# ================================
# Mailhog Configuration
# ================================
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ================================
# Mailgun Configuration
# ================================
MAILGUN_API_KEY=test-mailgun-api-key
MAILGUN_DOMAIN=test.beauty-salon.com
MAILGUN_REGION=US
MAILGUN_TEST_MODE=true
MAILGUN_WEBHOOK_SIGNING_KEY=test-webhook-key

# ================================
# Storage Configuration
# ================================
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_MAX_FILE_SIZE=524288000
STORAGE_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
STORAGE_UPLOAD_URL_EXPIRES_IN=3600
STORAGE_DOWNLOAD_URL_EXPIRES_IN=86400

# ================================
# MinIO Configuration
# ================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=test-bucket
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ================================
# R2 Configuration
# ================================
R2_ENDPOINT=https://test.r2.cloudflarestorage.com
R2_BUCKET=test-bucket
R2_ACCOUNT_ID=test-account
R2_ACCESS_KEY_ID=test-r2-key
R2_SECRET_ACCESS_KEY=test-r2-secret

# ================================
# S3 Configuration
# ================================
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=test-s3-key
S3_SECRET_ACCESS_KEY=test-s3-secret
S3_BUCKET=test-s3-bucket
S3_REGION=us-east-1

# ================================
# CDN Configuration
# ================================
CDN_BASE_URL=http://localhost:9000
CDN_ENABLE=false

# ================================
# Frontend URL
# ================================
FRONTEND_URL=http://localhost:5173

# ================================
# SMTP Configuration
# ================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test-user
SMTP_PASSWORD=test-password
SMTP_FROM=test@beauty-salon.test

# ================================
# Test Container Configuration
# ================================
TESTCONTAINERS_RYUK_DISABLED=true
DOCKER_CONFIG=/tmp/docker-test