# ================================
# Node Environment
# ================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgres://dev_user:dev_password@localhost:5432/beauty_salon_dev
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_POOL_SIZE=40
DATABASE_CONNECTION_TIMEOUT=30000
POSTGRES_DB=beauty_salon_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
POSTGRES_PORT=5432
DB_HOST=localhost

# ================================
# Authentication & Security
# ================================
JWT_SECRET=development-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=development-refresh-secret-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# Session
# ================================
SESSION_SECRET=development-session-secret-minimum-32-characters
SESSION_COOKIE_NAME=beauty_salon_session_dev
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax

# ================================
# Security
# ================================
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=development-32-character-encrypt
CSRF_SECRET=development-csrf-secret

# ================================
# Password Reset
# ================================
PASSWORD_RESET_TOKEN_EXPIRES_IN=3600
PASSWORD_RESET_URL=http://localhost:3001/reset-password

# ================================
# Email Verification
# ================================
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN=86400
EMAIL_VERIFICATION_URL=http://localhost:3001/verify-email

# ================================
# Two Factor Auth
# ================================
TWO_FACTOR_ISSUER=Beauty Salon Dev
TWO_FACTOR_WINDOW=1

# ================================
# CORS
# ================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ================================
# Logging
# ================================
LOG_LEVEL=debug
LOG_FORMAT=simple
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# ================================
# Email Configuration
# ================================
EMAIL_PROVIDER=mailhog
EMAIL_FROM_ADDRESS=noreply@dev.beautysalon.com
EMAIL_FROM_NAME=Beauty Salon Dev
EMAIL_REPLY_TO=support@dev.beautysalon.com

# ================================
# Mailhog Configuration
# ================================
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ================================
# Mailgun Configuration
# ================================
MAILGUN_API_KEY=key-development-not-used
MAILGUN_DOMAIN=mg.dev.beautysalon.com
MAILGUN_REGION=US
MAILGUN_TEST_MODE=true
MAILGUN_WEBHOOK_SIGNING_KEY=development-webhook-key

# ================================
# Storage Configuration
# ================================
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf
STORAGE_UPLOAD_URL_EXPIRES_IN=3600
STORAGE_DOWNLOAD_URL_EXPIRES_IN=86400

# ================================
# MinIO Configuration
# ================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=beauty-salon-dev
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ================================
# R2 Configuration
# ================================
R2_ENDPOINT=https://dev.r2.cloudflarestorage.com
R2_BUCKET=beauty-salon-dev
R2_ACCOUNT_ID=dev-account-id
R2_ACCESS_KEY_ID=dev-r2-access-key
R2_SECRET_ACCESS_KEY=dev-r2-secret-key

# ================================
# S3 Configuration
# ================================
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=dev-s3-access-key
S3_SECRET_ACCESS_KEY=dev-s3-secret-key
S3_BUCKET=beauty-salon-dev
S3_REGION=us-east-1

# ================================
# CDN Configuration
# ================================
CDN_BASE_URL=http://localhost:9000
CDN_ENABLE=false

# ================================
# Frontend URL
# ================================
FRONTEND_URL=http://localhost:5173

# ================================
# SMTP Configuration
# ================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@dev.beautysalon.com

# ================================
# Test Container Configuration
# ================================
TESTCONTAINERS_RYUK_DISABLED=true
DOCKER_CONFIG=/home/user/.docker