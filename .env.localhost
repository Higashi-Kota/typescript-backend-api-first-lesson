# Node Environment
NODE_ENV=localhost

# Server Configuration
PORT=3000
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/beauty_salon
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
POSTGRES_DB=beauty_salon
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Email Configuration (SMTP)
# For development, use MailHog (included in docker-compose)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@beauty-salon.local

# S3 Storage Configuration
# For development, use MinIO (included in docker-compose)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=beauty-salon
S3_REGION=us-east-1

# External Service Ports (for docker-compose)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001